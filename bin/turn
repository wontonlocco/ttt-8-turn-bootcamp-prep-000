#!/usr/bin/env ruby

require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "\nWelcome to Tic Tac Toe!\n\n"

display_board(board)

puts "Please enter 1-9:"
  user_selection = gets.strip
index = input_to_index(user_selection)
move(board, index)

turn(board, user_selection)

puts "\n\n"
